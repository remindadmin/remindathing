<html>
    <head>
        <meta charset="utf-8" />
        <meta name="format-detection" content="telephone=no" />
        <!-- WARNING: for iOS 7, remove the width=device-width and height=device-height attributes. See https://issues.apache.org/jira/browse/CB-4323 -->
        <meta name="viewport" content="user-scalable=no, initial-scale=1, maximum-scale=1, minimum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi" />
       <!-- <link rel="stylesheet" type="text/css" href="css/index.css" />-->
        <meta name="msapplication-tap-highlight" content="no" />
        <title>MercuryApp</title>
        <link rel="stylesheet" href="http://code.jquery.com/mobile/1.2.0/jquery.mobile-1.2.0.min.css" />
    </head>
    <body style="background-color:#000000;color:#FFFFFF;">

            <div id="question" style="padding:15px;">
                <h1>Did you take your medication?</h1>
                <input type="button" onclick="IsAnswer(1);" value="Yes"/>
                <input type="button" onclick="IsAnswer(2);" value="No"/>
                <input type="button" onclick="IsAnswer(3);" value="Invalid Response. Pick it if you must."/>
            </div>
        <script type="text/javascript" src="js/AjaxHelper.js"></script>
        <script type="text/javascript" src="js/AjaxCore.js"></script>
        <script type="text/javascript" src="js/index.js"></script>
        <script type="text/javascript">
            app.initialize();
        </script>

        <script type="text/javascript">
        function IsAnswer(intAnswer){
             var objQuestionBox = document.getElementById('question');
             if(intAnswer == 1){
               objQuestionBox.style.backgroundColor = "#339933";
               objQuestionBox.innerHTML = '<b style="padding:20px;">Great! I\'ll tell your doctor</b><br />';
              if(typeof(window['ACore']) != "undefined"){
                ACore.strFormName = 'question';
                ACore.Ajax_Call('http://testsite.mercurymessages.com/AS.php,null,appresponse,'+intAnswer);
              }
             }
             else if(intAnswer == 2){
               objQuestionBox.style.backgroundColor = "#FF0000";
               objQuestionBox.innerHTML = '<b style="padding:20px;">Too Bad! I\'ll tell your doctor</b><br />';
              if(typeof(window['ACore']) != "undefined"){
                ACore.strFormName = 'question';
                ACore.Ajax_Call('http://testsite.mercurymessages.com/AS.php,null,appresponse,'+intAnswer);
              }
             }
             else{
                alert('Answer not understood');
             }
            }
        </script>
    </body>
</html>
